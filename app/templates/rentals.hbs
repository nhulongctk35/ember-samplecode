{{#list-filter
   filter=(action 'filterByCity')
   as |rentals|}}
  <ul class="results">
    {{#each rentals as |rental|}}
        <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{rental.title}}</h3>
            </div>
            <div class="panel-body">
                <a href="#" class="thumbnail {{if isWide large}}" {{action 'toggleImage'}}>
                  <img src="{{rental.image}}" alt="">
                </a>
                
                <span>Owner:</span> {{rental.owner}} <br/>
                <span>Type:</span> {{rental.type}} <br/>
                <span>Location:</span> {{rental.city}} <br/>
                <span>Number of bedrooms:</span> {{rental.bedrooms}}
            </div>
        </div>
    </div>
    {{/each}}
  </ul>
{{/list-filter}}